<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".activity.ClientActivity">

    <Button
        android:id="@+id/btn_client_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始搜索" />

    <TextView
        android:id="@+id/tv_server_text"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/lv_client_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <android.support.v7.widget.CardView
        android:padding="5dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="15dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/tv_client_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>


    <EditText
        android:id="@+id/et_client_send"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_client_send"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="发送"></Button>
</LinearLayout>
